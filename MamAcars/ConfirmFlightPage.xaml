<Page x:Class="MamAcars.ConfirmFlightPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MamAcars"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConfirmFlightPage">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
        <TextBlock Text="Please add a comment (optional)" Margin="10"/>
        <TextBox Name="CommentTextBox" Width="250" Margin="10" TextWrapping="Wrap" AcceptsReturn="True" Height="100"/>
        <Button Content="Send Flight" Width="200" Margin="10" Click="OnSendFlightClicked"/>
    </StackPanel>
</Page>
