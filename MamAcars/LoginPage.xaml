<Page x:Class="MamAcars.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MamAcars"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
        <!-- Campo para el Usuario -->
        <TextBox Name="Username" Width="250" Margin="10" TextWrapping="Wrap" VerticalAlignment="Center"/>

        <!-- Campo para la Contraseña -->
        <PasswordBox Name="Password" Width="250" Margin="10" VerticalAlignment="Center"/>

        <Button Content="Login" Width="200" Margin="10" Click="OnLoginClicked"/>
    </StackPanel>
</Page>
