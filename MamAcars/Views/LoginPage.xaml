<Page x:Class="MamAcars.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MamAcars"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">


    <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" Margin="10,10,10,10">
   
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/> 
        <ColumnDefinition Width="*"/>   
    </Grid.ColumnDefinitions>

   
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/> 
        <RowDefinition Height="10"/>
        <RowDefinition Height="Auto"/> 
        <RowDefinition Height="10"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="10"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="10"/>
        <RowDefinition Height="Auto"/> 
    </Grid.RowDefinitions>

    
    <Image Source="/images/logo.png" Grid.ColumnSpan="2" Margin="0,0,0,20" HorizontalAlignment="Center" Grid.Row="0" Width="100"/>


    <Label Content="License" Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0"/>
    <TextBox x:Name="LicenseTextbox" Grid.Column="1" Grid.Row="2" Width="200" Margin="0,5" TextWrapping="Wrap" VerticalAlignment="Center"/>

    
    <Label Content="Password" Grid.Column="0" Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0"/>
    <PasswordBox x:Name="PasswordBox" Grid.Column="1" Grid.Row="4" Width="200" Margin="0,5" VerticalAlignment="Center"/>

        <TextBlock x:Name="ErrorTextBlock" Foreground="Red" Visibility="Hidden" Grid.ColumnSpan="2" Grid.Row="6" HorizontalAlignment="Center"  VerticalAlignment="Top" TextWrapping="Wrap" />

    <Button x:Name="LoginBtn" Content="Login" Grid.ColumnSpan="2" Grid.Row="8" Width="150" Margin="0,10" HorizontalAlignment="Center" Click="OnLoginClicked"/>
</Grid>

</Page>
