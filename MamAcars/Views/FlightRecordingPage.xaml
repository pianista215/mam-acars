<Page x:Class="MamAcars.FlightRecordingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MamAcars"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FlightRecordingPage">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Name="RecordingStatus" Text="Flight Recording in Progress..." FontSize="20" Margin="10"/>
        <Button Name="EndFlightButton" Content="End Flight" Width="200" Margin="10" Click="OnEndFlightClicked"/>
    </StackPanel>
</Page>
