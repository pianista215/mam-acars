<Page x:Class="MamAcars.FlightInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MamAcars"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Flight Information">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Error Message -->
            <RowDefinition Height="*"/>
            <!-- Flight Info -->
            <RowDefinition Height="Auto"/>
            <!-- Button -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Flight Information" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20" 
                   Grid.Row="0"/>

        <!-- Error Message -->
        <TextBlock Text="{Binding ErrorMessage}" 
                   FontSize="16" 
                   Foreground="Red" 
                   Visibility="{Binding ErrorVisibility}" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20" 
                   Grid.Row="1"/>

        <!-- Flight Info -->
        <Grid Grid.Row="2" Visibility="{Binding FlightInfoVisibility}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <!-- Labels -->
                <ColumnDefinition Width="*"/>
                <!-- Data -->
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Departure -->
                <RowDefinition Height="Auto"/>
                <!-- Arrival -->
                <RowDefinition Height="Auto"/>
                <!-- Alternate Airports -->
                <RowDefinition Height="Auto"/>
                <!-- Aircraft Details -->
            </Grid.RowDefinitions>

            <!-- Departure Airport -->
            <TextBlock Text="Departure Airport:" 
                       FontWeight="SemiBold" 
                       FontSize="18" 
                       VerticalAlignment="Center" 
                       Grid.Row="0" Grid.Column="0" 
                       Margin="0,0,10,0"/>
            <TextBlock Text="{Binding DepartureAirport}" 
                       FontSize="18" 
                       VerticalAlignment="Center" 
                       Grid.Row="0" Grid.Column="1" 
                       Margin="0,0,0,0"/>

            <!-- Arrival Airport -->
            <TextBlock Text="Arrival Airport:" 
                       FontWeight="SemiBold" 
                       FontSize="18" 
                       VerticalAlignment="Center" 
                       Grid.Row="1" Grid.Column="0" 
                       Margin="0,0,10,0"/>
            <TextBlock Text="{Binding ArrivalAirport}" 
                       FontSize="18" 
                       VerticalAlignment="Center" 
                       Grid.Row="1" Grid.Column="1" 
                       Margin="0,0,0,0"/>

            <!-- Alternate Airports -->
            <TextBlock Text="Alternate Airports:" 
                       FontWeight="SemiBold" 
                       FontSize="18" 
                       VerticalAlignment="Center" 
                       Grid.Row="2" Grid.Column="0" 
                       Margin="0,0,10,0"/>
            <TextBlock Text="{Binding AlternateAirports}" 
                       FontSize="18" 
                       VerticalAlignment="Center" 
                       Grid.Row="2" Grid.Column="1" 
                       Margin="0,0,0,0"/>

            <!-- Aircraft Details -->
            <TextBlock Text="Aircraft Details:" 
                       FontWeight="SemiBold" 
                       FontSize="18" 
                       VerticalAlignment="Center" 
                       Grid.Row="3" Grid.Column="0" 
                       Margin="0,0,10,0"/>
            <TextBlock Text="{Binding AircraftDetails}" 
                       FontSize="18" 
                       VerticalAlignment="Center" 
                       Grid.Row="3" Grid.Column="1" 
                       Margin="0,0,0,0"/>
        </Grid>

        <!-- Start Flight Button -->
        <Button 
                Content="{Binding StartFlightBtnText}" 
                IsEnabled="{Binding StartFlightBtnEnabled}"
                FontSize="18" 
                Click="OnStartFlight" 
                HorizontalAlignment="Center" 
                Margin="0,30,0,0" 
                Padding="10"
                Grid.Row="3"/>
    </Grid>
</Page>
